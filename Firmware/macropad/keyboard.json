        ]
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix": [0, 0], "x": 0, "y": 0, "label": "SW1"},
                {"matrix": [0, 1], "x": 1, "y": 0, "label": "SW2"},
                {"matrix": [0, 2], "x": 2, "y": 0, "label": "SW6"},
                {"matrix": [1, 0], "x": 0, "y": 1, "label": "S1 (Encoder)"},
                {"matrix": [1, 1], "x": 1, "y": 1, "label": "SW4"},
                {"matrix": [1, 2], "x": 2, "y": 1, "label": "SW5"}
            ]
        }
    }
}
